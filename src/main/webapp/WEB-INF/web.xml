<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee" version="2.5">
  <servlet>
    <servlet-name>jerseyRef</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>enterprises.orbital.evekit.frontend.ModelReferenceApplication</param-value>
    </init-param>
    <init-param>
      <param-name>swagger.scanner.id</param-name>
      <param-value>ref.id</param-value>
    </init-param>
    <init-param>
      <param-name>swagger.config.id</param-name>
      <param-value>ref.id</param-value>
    </init-param>    
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>jerseyRef</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Jersey2ConfigRef</servlet-name>
    <servlet-class>io.swagger.jersey.config.JerseyJaxrsConfig</servlet-class>
    <init-param>
      <param-name>api.version</param-name>
      <param-value>2.0.0</param-value>
    </init-param>
    <init-param>
      <param-name>swagger.api.title</param-name>
      <param-value>EveKit Reference API Server</param-value>
    </init-param>
    <init-param>
      <param-name>swagger.api.basepath</param-name>
      <param-value>${enterprises.orbital.evekit.ref-model-frontend.basepath}/${enterprises.orbital.evekit.ref-model-frontend.appname}/api</param-value>
    </init-param>
    <init-param>
      <param-name>swagger.scanner.id</param-name>
      <param-value>ref.id</param-value>
    </init-param>
    <init-param>
      <param-name>swagger.config.id</param-name>
      <param-value>ref.id</param-value>
    </init-param>    
    <load-on-startup>2</load-on-startup>
  </servlet>
  
  <filter>
    <filter-name>ApiOriginFilter</filter-name>
    <filter-class>enterprises.orbital.evekit.frontend.ApiOriginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ApiOriginFilter</filter-name>
    <url-pattern>/api/*</url-pattern>
  </filter-mapping>
</web-app>